CC=gcc
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME=school

all:	sch

sch: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(word 2, $(OBJ)):	$(word 2, $(SRC))
	$(CC) -c $(word 2, $(SRC))

$(word 1, $(OBJ)):	$(word 1, $(SRC))
	$(CC) -c $(word 1, $(SRC))

clean:
	rm -f *~ school

oclean:
	rm -f *.o

fclean: clean oclean

re: oclean sch